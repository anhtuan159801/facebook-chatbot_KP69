{
  "name": "facebook-chatbot-load-balancer",
  "version": "3.0.0",
  "description": "Facebook Messenger Chatbot with Load Balancer, Gemini and Router Hug integration for Vietnamese public service support",
  "main": "src/core/load-balancer/load_balancer.js",
  "scripts": {
    "start": "node src/core/load-balancer/load_balancer.js",
    "start:gemini": "node src/core/services/gemini/gemini.js",
    "start:router": "node src/core/services/router-hug/router_hug.js",
    "start:all": "node scripts/start_system.js start",
    "stop:all": "node scripts/start_system.js stop",
    "restart:all": "node scripts/start_system.js restart",
    "status": "node scripts/start_system.js status",
    "dev": "nodemon src/core/load-balancer/load_balancer.js",
    "pm2:start": "pm2 start config/ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "setup": "node scripts/setup.js",
    "keep-alive": "node scripts/keep-alive.js",
    "start:with-keepalive": "concurrently \"npm start\" \"npm run keep-alive\"",
    "render:start": "node scripts/render-start.js",
    "render:simple": "concurrently \"npm start\" \"npm run keep-alive\"",
    "crawl": "node scripts/crawl-scheduler.js",
    "crawl:once": "node -e \"(async () => { const CrawlerManager = require('./src/utils/crawler-manager'); const crawler = new CrawlerManager(); await crawler.crawlGovernmentServices(); })()\"",
    "upload:doc": "node scripts/upload-document.js",
    "populate:knowledge": "node scripts/populate-knowledge.js",
    "import-knowledge-rag": "node scripts/import-knowledge-rag.js"
  },
  "keywords": [
    "facebook",
    "messenger",
    "chatbot",
    "ai",
    "gemini",
    "load-balancer",
    "failover",
    "vietnamese",
    "public-service"
  ],
  "author": "Anh Tuan",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.12.0",
    "@supabase/supabase-js": "^2.44.4",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.7.2",
    "cheerio": "^1.0.0-rc.12",
    "concurrently": "^8.2.2",
    "copilot-api": "^0.7.0",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "mammoth": "^1.11.0",
    "node-fetch": "^3.3.2",
    "pdf-parse": "^1.1.4",
    "pg": "^8.12.0",
    "pm2": "^6.0.14",
    "puppeteer": "^22.12.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anhtuan159801/facebook-chatbot.git"
  },
  "bugs": {
    "url": "https://github.com/anhtuan159801/facebook-chatbot/issues"
  },
  "homepage": "https://github.com/anhtuan159801/facebook-chatbot#readme"
}
