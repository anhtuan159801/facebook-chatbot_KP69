{
  "name": "facebook-chatbot-load-balancer",
  "version": "3.0.0",
  "description": "Facebook Messenger Chatbot with Load Balancer, Gemini and Router Hug integration for Vietnamese public service support",
  "main": "load_balancer.js",
  "scripts": {
    "start": "node load_balancer.js",
    "start:gemini": "node gemini.js",
    "start:router": "node router_hug.js",
    "start:all": "node start_system.js start",
    "stop:all": "node start_system.js stop",
    "restart:all": "node start_system.js restart",
    "status": "node start_system.js status",
    "dev": "nodemon load_balancer.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "setup": "node setup.js",
    "keep-alive": "node keep-alive.js",
    "start:with-keepalive": "concurrently \"npm start\" \"npm run keep-alive\"",
    "render:start": "node render-start.js",
    "render:simple": "concurrently \"npm start\" \"npm run keep-alive\""
  },
  "keywords": [
    "facebook",
    "messenger",
    "chatbot",
    "ai",
    "gemini",
    "load-balancer",
    "failover",
    "vietnamese",
    "public-service"
  ],
  "author": "Anh Tuan",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.12.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.6.1",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.12.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anhtuan159801/facebook-chatbot.git"
  },
  "bugs": {
    "url": "https://github.com/anhtuan159801/facebook-chatbot/issues"
  },
  "homepage": "https://github.com/anhtuan159801/facebook-chatbot#readme"
}
